# for file manager
	pacman -S pcmanfm-gtk3

# for audio
	pacman -S alsa-utils

# for video
	pacman -S vlc live-media mpv

# for bluetooth
	pacman -S bluez bluez-utils
	bluetoothctl

# for japanese
	# add 3 env variables:
		export GTK_IM_MODULE = 'ibus'
		export QT_IM_MODULR = 'ibus'
		export XMODIFIERS = '@im=bus'
	pacman -S adobe-source-han-sans-jp ibus ibus-anthy
	ibus-daemon -dr
	ibus-setup
